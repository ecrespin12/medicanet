<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doctor.fragments.FragmentConsulta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9ECCCCCC"
            android:text="Consulta mÃ©dica"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetalles_fragment_doc_consulta"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_margin="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/detalle_consulta_1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button

                android:id="@+id/btnMedicamentos_fragment_doc_consulta"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/medicamento_1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnAgregarCita_fragment_doc_consulta"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="3dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/nueva_consulta_1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tev_ConsultaPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de la consulta"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRecargarDetalles_fragment_doc_consulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:src="@drawable/recargar" />

            <ProgressBar
                android:id="@+id/pgbRecargarDetalles_fragment_doc_consulta"
                android:visibility="visible"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

        </LinearLayout>


        <ListView
            android:background="#BBDEFB"
            android:layout_margin="10dp"
            android:id="@+id/lvDetalles_fragment_doc_consulta"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tev_RecetaMedica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicamentos recetados"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRecargarMedicamentos_fragment_doc_consulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/recargar"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pgbRecargarMedicamentos_fragment_doc_consulta"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:visibility="visible" />
        </LinearLayout>

        <ListView
            android:background="#BBDEFB"
            android:layout_margin="10dp"
            android:id="@+id/lvMedicamentos_fragment_doc_consulta"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <Button
            android:id="@+id/btnTerminar_fragment_doc_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boton_redondeado_borde"
            android:text="salir de la consulta"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

</FrameLayout>
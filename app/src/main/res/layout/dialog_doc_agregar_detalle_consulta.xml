<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@drawable/style_modal"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:id="@+id/btnCerrar_doc_modal_agregar_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/ic_close" />

    <TextView
        android:id="@+id/tvTitulo_doc_modal_agregar_detalle_consulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Agregar detalle de consulta"
        android:textColor="#1a81ad"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de detalle" />

    <LinearLayout
        android:id="@+id/splinearlayout_dialog_doc_agregar_cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_cuadrado_borde"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spTipo_doc_modal_agregar_detalle_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción" />

    <EditText
        android:id="@+id/edtDescripcion_doc_modal_agregar_detalle_consulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_cuadrado_borde"
        android:gravity="center_horizontal"
        android:hint="Agregue una descripción"
        android:inputType="textMultiLine"
        android:lines="5"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnGuardar_doc_modal_agregar_detalle_consulta"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_style_modal"
        android:clickable="true"
        android:layout_gravity="center"
        android:text="Guardar"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#208bb9"
    tools:context=".ui.login.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="#1a81ad"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:srcCompat="@drawable/medicanet1" />

        <EditText
            android:id="@+id/edt_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Nombre de Usuario"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#B5FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="ContraseÃ±a de Usuario"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#B5FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_login_iniciar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boton_redondeado_borde"
            android:clickable="true"
            android:onClick="iniciar"
            android:text="@string/iniciar_sesi_n"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_login_salir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/boton_redondeado_borde"
            android:clickable="true"
            android:onClick="salir"
            android:text="@string/salir"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
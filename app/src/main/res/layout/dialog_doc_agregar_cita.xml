<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="@drawable/style_modal"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:id="@+id/imgCerrar_dialog_doc_agregar_cita"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:background="@drawable/eliminar1" />

    <TextView
        android:id="@+id/tvTitulo_dialog_doc_agregar_cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/agregar_proxima_cita"
        android:textColor="#1a81ad"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Centro medico"
        android:textSize="18sp" />

    <LinearLayout

        android:id="@+id/splinearlayout_dialog_doc_agregar_cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_cuadrado_borde"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spTipo_dialog_doc_agregar_cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Fecha:  "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtFecha_dialog_doc_agregar_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnFecha_dialog_doc_agregar_cita"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/calendario_64_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Hora:    "
            android:textSize="18sp" />
        <EditText
            android:id="@+id/edtHora_dialog_doc_agregar_cita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnHora_dialog_doc_agregar_cita"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/alarm_celeste" />

    </LinearLayout>

    <Button
        android:layout_margin="20dp"
        android:id="@+id/btnGuardar_doc_modal_agregar_cita"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_style_modal"
        android:clickable="true"
        android:text="Guardar consulta"
        android:textColor="#ffffff"
    android:textSize="14dp" />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/btnEliminar_doc_modal_agregar_cita"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_style_modal"
        android:clickable="true"
        android:text="eliminar consulta"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</LinearLayout>
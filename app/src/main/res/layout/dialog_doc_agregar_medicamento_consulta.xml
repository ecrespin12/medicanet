<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="@drawable/style_modal"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:layout_gravity="end"
        android:id="@+id/imgCerrar_doc_modal_agregar_medicamento"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/eliminar1" />

    <TextView
        android:id="@+id/tvTitulo_doc_modal_agregar_medicamento_consulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Agregar medicamento"
        android:textColor="#1a81ad"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo_doc_modal_agregar_medicamento_consulta"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Medicamento"
        android:textSize="18sp" />

    <LinearLayout

        android:id="@+id/splinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitulo_doc_modal_agregar_medicamento_consulta"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_cuadrado_borde"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spTipo_doc_modal_agregar_medicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTituloDeMedida_doc_modal_agregar_medicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text="Cantidad segun unidad de medida"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edtCantidad_doc_modal_agregar_medicamento"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Indicaciones"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtIndicaciones_doc_modal_agregar_medicamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_cuadrado_borde"
        android:gravity="center_horizontal"
        android:hint="Agregue una descripciÃ³n"
        android:inputType="textMultiLine"
        android:lines="3"
        android:scrollbars="vertical" />



    <Button
        android:layout_margin="20dp"
        android:id="@+id/btnGuardar_doc_modal_agregar_medicamento"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/boton_style_modal"
        android:clickable="true"
        android:text="Guardar"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnEliminar_doc_modal_agregar_medicamento"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boton_style_modal"
        android:clickable="true"
        android:text="eliminar"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</LinearLayout>
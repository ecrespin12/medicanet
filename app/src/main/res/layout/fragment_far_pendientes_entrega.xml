<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.farmacia.PendientesDeEntrega.PendientesDeEntrega">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_far_medicamentos_entregados_fecha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:hint="mm/dd/aaaa"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/imgb_far_medicamentos_entregados_fecha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@android:drawable/ic_menu_my_calendar" />

            <EditText
                android:id="@+id/edt_far_medicamentos_entregados_fecha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:hint="mm/dd/aaaa"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/imgb_far_medicamentos_entregados_fecha2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@android:drawable/ic_menu_my_calendar" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#343636"
            android:gravity="center_horizontal"
            android:text="@string/pendientes_entrega"
            android:textColor="#FFEBEE"
            android:textColorHint="#9575CD" />

        <ListView
            android:id="@+id/lv_pendientes_entregas_pac"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>
